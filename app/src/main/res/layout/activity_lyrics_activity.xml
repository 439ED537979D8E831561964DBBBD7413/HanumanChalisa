<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hanumanchalisa.gstech.com.hanumanchalisa.Lyrics_activity"
    android:background="@drawable/background"
    >

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/backbutton"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        />


    <ImageView
        android:id="@+id/share_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/imageViewone"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/sharebtn"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"

        tools:ignore="UnknownId" />


    <ImageView
        android:id="@+id/select_language_button"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"

        android:layout_alignStart="@+id/scrollView"
        android:layout_marginTop="46dp"

        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"

        android:src="@drawable/languageselect" />

    <ImageView
        android:id="@+id/rate_button"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/select_language_button"
        android:layout_centerHorizontal="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"

        android:src="@drawable/rateusbutton" />


    <ImageView
        android:id="@+id/font_size_button"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/scrollView"

        android:layout_alignTop="@+id/select_language_button"
        android:background="?attr/selectableItemBackgroundBorderless"

        android:clickable="true"
        android:src="@drawable/fontsize"
        android:layout_alignRight="@+id/scrollView" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="300dp"


        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp">

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/lyrics_text"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:lineSpacingExtra="10dp"
            android:scrollbars="vertical"
            android:text="@string/english_lyric"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#000000"
            android:layout_alignParentLeft="true" />
    </ScrollView>










